<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="author" content="Marco Russo <todo@mrusso.net>">
        <!-- Las metas -->
        {% block metas %}
            {#{% include 'MRussoLibBundle:Component:seo.html.twig' %}#}
        {% endblock %}
        <!-- Fin metas -->

        <link rel="icon" href="{{ app.request.getSchemeAndHttpHost() ~ asset('bundles/mrussominiproject/images/logo.png') }}" type="image/x-icon">
        <!-- Bootstrap core CSS -->
        {% block stylesheets %}
            <link href="{{ app.request.getSchemeAndHttpHost() ~ asset('bundles/mrussominiproject/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ app.request.getSchemeAndHttpHost() ~ asset('bundles/mrussominiproject/css/mr.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}


        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>

    <body>
        <nav class="navbar navbar-fixed-top navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('_homepage') }}">Mini Project</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href='#'>Post</a>
                        </li>
                        <li>
                            <a href='#'>View</a>
                        </li>
                    </ul>
                </div>
                <!-- /.nav-collapse -->
            </div><!-- /.container -->
        </nav><!-- /.navbar -->
        <br><br><br>
        <div class="container">

            <div class="row row-offcanvas row-offcanvas-right">

                <div class="col-xs-12 col-md-9">
                    {% include('MRussoMiniProjectBundle::layouts/partials/flashmessage.html.twig') %}
                     {% block create_form %}
                    {% include('MRussoMiniProjectBundle::layouts/partials/create_post.html.twig') %}
                    {% endblock %}
                    <div class="row">
                    {% block body %}{% endblock %}
                    {{ paginator() }}
                </div><!--/row-->
            </div><!--/.col-xs-12.col-sm-9-->

            <div class="col-xs-12 col-md-3 sidebar-offcanvas hidden-sm hidden-xs" id="sidebar">
                {#                {{ right_side() }}#}
                {#                {{ cloud() }}#}
            </div><!--/.sidebar-offcanvas-->
        </div><!--/row-->

        <hr>

        <footer>
            <p>&copy; MRusso 2016</p>
        </footer>

    </div><!--/.container-->
    {% include('MRussoMiniProjectBundle::layouts/partials/modal.html.twig') %}
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->

    {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
        <script src="{{ app.request.getSchemeAndHttpHost() ~ asset('bundles/mrussominiproject/js/bootstrap.min.js') }}"></script>
        <script src="{{ app.request.getSchemeAndHttpHost() ~ asset('bundles/mrussominiproject/js/main.js') }}"></script>
        <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    {% endblock %}


</body>
</html>
